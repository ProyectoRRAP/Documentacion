@GLOSSDEF{AS,word="AS", definition="Autonomous System, conjunto de redes bajo una administración común que comparten una misma estrategia de ruteo."} 

@GLOSSDEF{ASIC,word="ASIC", definition="Application-Specific Integrated Circuit, chip diseñado  para una aplicación específica."}
 
@GLOSSDEF{BGP,word="BGP", definition="Protocolo de ruteo intradominio, permite intercambiar información de alcanzabilidad con otros sistemas BGP."}

@GLOSSDEF{BIRD,word="BIRD", definition="Suite de ruteo IP Open Source."}

@GLOSSDEF{cdeser,word="calidad de servicio", definition="Calidad de servicio, rendimiento promedio de una red."}
 
@GLOSSDEF{CPE,word="CPE", definition="Customer provisioned Equipment, equipo (hardware) de un proveedor de servicios desplegado en las instalaciones de un cliente y conectado a la red del proveedor."}

 
@GLOSSDEF{CPLD,word="CPLD", definition="Complex Programmable Logic Device, dispositivo de hardware reprogramable."}
 
@GLOSSDEF{DoS,word="DoS", definition="Ataque a un sistema o red que causa que un servicio o recurso sea inaccesible a usuarios legítimos."}
 
@GLOSSDEF{Ethertype,word="Ethertype", definition="Campo de 16 bits en el cabezal Ethernet que indica el protocolo que se encuentra en la capa superior."}
 
@GLOSSDEF{IETF,word="IETF", definition="Comunidad formada por grupos de trabajo de área específicas responsables de desarrollar estándares de Internet."}

@GLOSSDEF{IRTF,word="IRTF", definition="Internet Research Task Force, comunidad de expertos en redes donde se tratan temas relacionados con Internet."}
@GLOSSDEF{IS-IS,word="IS-IS", definition="Intermediate System to Intermediate System, protocolo de ruteo dinámico IP."}
 
@GLOSSDEF{LDP,word="LDP", definition="Label Distribution Protocol, protocolo utilizado por MPLS para distrubir etiquetas entre los nodos de una red."}
 
@GLOSSDEF{LSDB,word="LSDB", definition="Link State Database, creada y utilizada por el protocolo OSPF, es la base de datos donde se almacena la topología de la red."}
 
@GLOSSDEF{MPLS,word="MPLS", definition=" Multi Protocol Label Switching, protocolo de red basado en etiquetas que opera entre la capa de enlace y la capa de red."}
 

@GLOSSDEF{NPU,word="NPU", definition="Network Processing Unit, unidad de procesamiento orientada a aplicaciones de red."}

@GLOSSDEF{VHDL,word="VHDL", definition="Lenguaje de descripción de hardware."}

@GLOSSDEF{Verilog,word="Verilog", definition="Lenguaje de descripción de hardware."}

@GLOSSDEF{HDL,word="HDL", definition="Hardware Description Language, es una familia de lenguajes de programación especializados en la descripción de circuitos electrónicos."}

@GLOSSDEF{TCAM,word="TCAM", definition="Ternary Content-Addressable Memory, memoria de alta velocidad que busca y accede a sus contenidos en un ciclo de reloj."}

@GLOSSDEF{Switch,word="Switch", definition="Dispositivo que reenvía paquetes en base a la dirección de capa de enlace (L2) de dichos paquetes."}

@GLOSSDEF{Sistema Autonomo,word="Sistema Autonomo", definition="Ver AS."}

@GLOSSDEF{RYU,word="RYU", definition="Controlador SDN compatible con el protocolo OpenFlow."}

@GLOSSDEF{Router,word="Router", definition="Dispositivo que reenvía paquetes en base a su dirección de capa de red (L3)."}

@GLOSSDEF{RIP,word="RIP", definition="Routing Information Protocol, protocolo de ruteo IP basado en algoritmo vector de distancias."}

@GLOSSDEF{RFC,word="RFC", definition="Request For Comment, documento que especifica un estándar concebido por la IETF."}

@GLOSSDEF{TAP,word="TAP", definition="Dispositivo para interceptar el tráfico en una red, por ejemplo para su posterior análisis."}

@GLOSSDEF{RauFlow ,word="RauFlow ", definition="Aplicacion de control y gestión desarrollada en el marco de este proyecto."}

@GLOSSDEF{Rau-Switch,word="Rau-Switch", definition="Denominación de los nodos fabricados y utilizados en el marco de este proyecto."}

@GLOSSDEF{Quagga,word="Quagga", definition=" Suite de ruteo IP Open Source."}

@GLOSSDEF{QoS,word="QoS", definition="Ver calidad de servicio."}

@GLOSSDEF{OSPF,word="OSPF", definition="Open Shortest Path First, protocolo de ruteo IP dinámico basado en algoritmos de vector de distancias."}

@GLOSSDEF{Proxy,word="Proxy", definition="Intermediario entre las peticiones de red que realiza un cliente a un servidor."}

@GLOSSDEF{OpenVSwitch,word="Open vSwitch", definition="Switch de red implementado en software."}

@GLOSSDEF{OpenFlow,word="OpenFlow", definition="Protocolo de red perteneciente a la capa de aplicación que permite la comunicación entre un controlador con dispositivos habilitados."}

@GLOSSDEF{SDN,word="SDN", definition="Software Defined Networking o Redes Definidas por Software es un enfoque alternativo que desacopla los planos de control y datos (ver capítulo 2, estado del arte)."}

@GLOSSDEF{FPGA,word="FPGA", definition="Field Programmable Gate Array, dispositivo semiconductor que contiene bloques de lógica cuya interconexión y funcionalidad puede ser configurada  “in situ” mediante un lenguaje de descripción de hardware (por ejemplo VHDL)."}

@GLOSSDEF{L2,word="L2", definition="L2 es el diminutivo de Layer 2 utilizado para referirse a la capa 2 en el modelo de capas OSI."}

@GLOSSDEF{L3,word="L3", definition="L3 es el diminutivo de Layer 3 utilizado para referirse a la capa 3 en el modelo de capas OSI."}

@GLOSSDEF{Bitfile,word="bitfile", definition="Archivo con toda la información necesaria para configurar un chip FPGA con la implementación del diseño creado, a partir de las herramientas utilizadas (por ejemplo suite Xilinx ISE SDK)."}

@GLOSSDEF{frescura,word="frescura", definition="Se define frescura de un dato al nivel de actualización del mismo; es decir, que tan reciente es la información."}

